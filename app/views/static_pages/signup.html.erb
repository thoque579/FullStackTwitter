<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Sign Up</title>
  </head>
  <body>
    <%= render "shared/navbar" %>
    <div class="container">
      <div class="row">
        <div class="col-lg-6 layout text-align-center">
          <form id="signUp">
            <div id="displayAlertMessage"></div>
            <h1>Sign up</h1>
            <div class="form-group">
              <input type="text" name="username" id="username_input" class="form-control" placeholder="Username" required="required"/>
            </div>
            <div class="form-group">
              <input type="text" name="email" id="email_input" class="form-control" placeholder="Email" required="required"/>
            </div>
            <div class="form-group">
              <input type="password" name="password" id="password_input" class="form-control" placeholder="Password" required="required"/>
            </div>
            <button type="submit" class="btn btn-success" id="submit-button">Sign up</button>
            <p>Already have an account?
              <a class="text-primary" href="/login">log in</a>
            </p>
          </form>
        </div>
      </div>
    </div>
    <%= render "shared/footer" %>
  </body>
</html>
